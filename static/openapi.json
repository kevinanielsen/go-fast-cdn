    "/api/cdn/doc/{fileName}": {
      "get": {
        "description": "Retrieves metadata about the document",
        "responses": {
          "400": {
            "description": "Document filename was not provided",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
